<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="1080.0" minWidth="1920.0" stylesheets="@../com/example/pet_shelter/RegisterView.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.GUI.RegisterView">
   <left>
   <AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" BorderPane.alignment="CENTER">
      <children>
            <VBox layoutX="608.0" layoutY="170.0" prefHeight="604.0" prefWidth="335.0">
               <children>
               <TextField fx:id="username" prefHeight="40.0" prefWidth="220.0" promptText="Username" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <TextField fx:id="email" prefHeight="40.0" prefWidth="220.0" promptText="Email" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <PasswordField fx:id="password" prefHeight="40.0" prefWidth="220.0" promptText="Password" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </PasswordField>
               <TextField fx:id="textID" prefHeight="40.0" prefWidth="220.0" promptText="ID" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <TextField fx:id="age" prefHeight="40.0" prefWidth="220.0" promptText="Age" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <TextField fx:id="gender" prefHeight="40.0" prefWidth="220.0" promptText="gender" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <TextField fx:id="addressText" prefHeight="40.0" prefWidth="220.0" promptText="Address" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="PhoneNumText" prefHeight="40.0" prefWidth="220.0" promptText="phoneNum" styleClass="input-field">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
               <Button fx:id="createAccount" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCreateAccount" styleClass="action-button" text="Create Account">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Button>
               <Button fx:id="returnButton" mnemonicParsing="false" onAction="#onReturnButton" styleClass="action-button" text="Return">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
      </children>
   </AnchorPane>
   </left>
</BorderPane>
