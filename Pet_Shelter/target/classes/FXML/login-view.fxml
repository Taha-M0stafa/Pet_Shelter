<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.GUI.LoginStage">
   <stylesheets>
      <URL value="@../com/example/pet_shelter/LoginView.css" />
   </stylesheets>
   <left>
      <AnchorPane styleClass="sidebar">
         <children>
            <ImageView fitHeight="300.0" fitWidth="300.0" layoutX="40.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" styleClass="logo">
               <image>
                  <Image url="@../Photos/our logo.png" />
               </image>
            </ImageView>
            <Label layoutX="80.0" layoutY="350.0" styleClass="welcome-label" text="Adopt Happiness Today!" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefWidth="1008.0">
         <children>
            <VBox alignment="CENTER" layoutX="346.0" layoutY="113.0" maxWidth="412.0" prefHeight="493.0" prefWidth="379.0" spacing="20" styleClass="form-container">
               <children>
                  <Label styleClass="form-title" text="Login" />
                  <TextField fx:id="userField" promptText="Username" styleClass="input-field" />
                  <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                  <Button fx:id="loginButton" onAction="#onLoginButton" styleClass="primary-button" text="Login" />
                  <Button fx:id="registerButton" onAction="#onRegisterButton" styleClass="secondary-button" text="Register" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
